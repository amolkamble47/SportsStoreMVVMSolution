<UserControl x:Class="SportsStoreNavWpfApp.Products.ProductListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportsStoreNavWpfApp.Products"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <StackPanel>
            <Border BorderBrush="DarkOrchid" BorderThickness="2" CornerRadius="2">
                <TextBlock Text="Hierarchy And Navigation Product List" TextAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border BorderBrush="DarkKhaki" BorderThickness="2" CornerRadius="2">
                <TextBlock Text="{Binding DisplayMessage}" TextAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <StackPanel Orientation="Horizontal">
                <DataGrid>
                    
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
